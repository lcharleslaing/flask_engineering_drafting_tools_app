{
  "name": "engineering-drafting-tools",
  "version": "1.0.0",
  "description": "Engineering/Drafting Tools - A comprehensive desktop application for engineering and drafting tasks",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run flask\" \"wait-on http://127.0.0.1:5000 && electron .\"",
    "flask": "python app.py",
    "build": "electron-builder",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "engineering",
    "drafting",
    "flask",
    "electron",
    "desktop"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.engineering.drafting-tools",
    "productName": "Engineering/Drafting Tools",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "app.py",
      "routes/**/*",
      "templates/**/*",
      "static/**/*",
      "requirements.txt"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/assets/icon.png"
    }
  }
}
